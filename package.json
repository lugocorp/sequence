{
  "name": "net.lugocorp.sequence",
  "displayName": "Adventures in Abya Yala",
  "version": "1.0.0",
  "description": "A retro RPG rougelite game.",
  "scripts": {
    "compile": "webpack",
    "format": "prettier -w src && eslint --fix src",
    "start": "webpack serve --port 2017",
    "android": "cordova run android",
    "test": "mocha --loader=ts-node/esm --extension=ts src/tests/*.spec.ts",
    "apk": "cp platforms/android/app/build/outputs/apk/debug/app-debug.apk app.apk",
    "aab": "cp platforms/android/app/build/outputs/bundle/release/app-release.aab ."
  },
  "keywords": [
    "ecosystem:cordova"
  ],
  "author": "Alex Lugo",
  "license": "Apache-2.0",
  "engines": {
    "node": ">=14.20.1",
    "nvm": ">=8.19.2"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.9.1",
    "@typescript-eslint/parser": "^5.9.1",
    "cordova": "^12.0.0",
    "cordova-android": "^13.0.0",
    "cordova-browser": "^6.0.0",
    "cordova-plugin-file": "^8.1.3",
    "eslint": "^8.6.0",
    "prettier": "^2.7.1",
    "ts-loader": "^9.2.6",
    "typescript": "^4.5.4",
    "webpack": "^5.66.0",
    "webpack-cli": "^4.9.1",
    "webpack-dev-server": "^4.7.3"
  },
  "cordova": {
    "platforms": [
      "browser",
      "android"
    ],
    "plugins": {
      "cordova-plugin-file": {}
    }
  },
  "dependencies": {
    "@types/chai": "^4.3.5",
    "@types/mocha": "^10.0.1",
    "chai": "^4.3.7",
    "mocha": "^10.2.0",
    "ts-node": "^10.9.1"
  }
}